{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/types/*": ["./app/_types/*"],
      "@/data/*": ["./app/_data/*"],
      "@/components/*": ["./app/_components/*"],
      "@/helpers/*": ["./app/_helpers/*"],
      "@/hooks/*": ["./app/_hooks/*"],
      "@/context/*": ["./app/_context/*"],
      "@/layout/*": ["./app/_layout/*"],

      "@studio/components/*": ["./app/(studio)/_components/*"],
      "@studio/context/*": ["./app/(studio)/_context/*"],
      "@studio/types/*": ["./app/(studio)/_types/*"],

      "@festival/components/*": ["./app/(festival)/_components/*"],
      "@festival/context/*": ["./app/(festival)/_context/*"],
      "@festival/layout/*": ["./app/(festival)/_layout/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
